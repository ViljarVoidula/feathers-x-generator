fragment {{properCase resource}}Fields on {{properCase resource}} {
    {{ id }}
}

query Find{{properCase (pluralize resource)}}($query: JSONObject) {
  {{camelCase (pluralize resource)}}Page(query: $query) {
    total
    skip
    limit
    data {
      ...{{properCase resource}}Fields
    }
  }
}

query FindOne{{properCase resource}}($id: String!) {
  {{camelCase resource}}(id: $id) {
    ...{{properCase resource}}Fields
  }
}


mutation Create{{properCase resource}}($data: Create{{properCase resource}}!) {
  create{{properCase resource}}(data: $data) {
    ...{{properCase resource}}Fields
  }
}

mutation Patch{{properCase resource}}($id: ID!, $data: Patch{{properCase resource}}!) {
  patch{{properCase resource}}(id: $id, data: $data) {
    ...{{properCase resource}}Fields
  }
}

