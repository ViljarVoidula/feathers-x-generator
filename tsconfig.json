{
  "ts-node": {
    "esm": true,
    "files": true,
    "compilerOptions": {
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
  },
  "allowSyntheticDefaultImports": true,
  "include": ["src"],
  "exclude": ["node_modules", "graphql", "dist", "assets", "test-output"]
}
